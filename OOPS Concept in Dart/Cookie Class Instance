void main() {
  // Option 1: Using the standard object creation
  Cookie cookie = Cookie(); // Creating an instance of the Cookie class

  // Option 2: Using the 'final' keyword
  // final cookie = Cookie(); // Alternative way to create an instance of Cookie

  // Printing the properties of the created Cookie instance
  print(cookie.quantity);   // Accessing the 'quantity' property of the Cookie
  print(cookie.shape);      // Accessing the 'shape' property of the Cookie
  cookie.baking();          // Calling the 'baking' method of the Cookie
  print(cookie.isBaked());  // Checking if the cookie is baked using the 'isBaked' method
}

class Cookie {
  // Instance Variables -> Represent the data specific to each Cookie instance
  String shape = "Star";   // Shape of the cookie (default is "Star")
  int quantity = 2;        // Quantity of cookies (default is 2)
  
  // Method -> Represents the behavior or actions of the class
  void baking() {
    // Simulates the baking process of a cookie
    print("The baking process has been initiated.");
  }
  
  bool isBaked() {
    // Returns the baked status of the cookie (currently returns false)
    return false;
  }
}
